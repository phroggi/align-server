model User {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map(name: "users")
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  image       String?  @default("")
  description String
  price       Decimal
  features    String[]
  category    String
  slug        String   @unique
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map(name: "products")
}
